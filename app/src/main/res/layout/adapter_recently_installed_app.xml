<?xml version="1.0" encoding="utf-8"?>
<com.fh.info.decor.ripple.RippleLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:orientation="vertical"
    android:clickable="true"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">
    <ImageView
        android:background="@drawable/ic_shadow"
        android:elevation="50dp"
        android:outlineSpotShadowColor="@color/white"
        android:outlineAmbientShadowColor="@color/white"
        tools:src="@drawable/icon_all_apps"
        android:id="@+id/app_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        tools:targetApi="p" />
    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/primaryTextColor"
        android:layout_marginTop="10dp"/>


</com.fh.info.decor.ripple.RippleLinearLayout>